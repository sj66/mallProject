page{  
  height: 100%;  
  background-color: #F3F4F6;
} 
.banner{
  width: 100%;
  height:520rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}
.product-title{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  background-color: #ffffff;
}
.product-title image{
  width: 60%;
  height: 60rpx;
  margin-top: 20rpx;
}
/* 标题栏 */
.page-header{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
}
.page-title{
  width:400rpx;
  height:72rpx;
  line-height: 72rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #ff0000;
  text-align:center;
  position:relative;
}
.page-title:before,
.page-title:after
{
  position:absolute;
  background:#ccc;
  content:"";
  height:4rpx;
  top:50%;
  width:120rpx;
}
.page-title:before{
  left:-10rpx;
}
.page-title:after{
  right:-10rpx;
}
.page-msg{
  font-size: 24rpx;
  font-weight: bold;
  color: #999999;
  margin-bottom: 40rpx;
}
/* 单个图片容器的样式 */
.img_item {
  width: 50%;
  display: inline-block;
  vertical-align: top;
  background-color: #ffffff;
  font-size: 24rpx;
  border-left: 2rpx solid #eeeeee;
  border-bottom: 2rpx solid #eeeeee;
  box-sizing: border-box;

}
.item_info{
  width: 100%;
  height: 360rpx;
  border-top:2rpx solid #eeeeee;
}
.item_info image{
  width: 100%;
  height: 100%;
}
.product-name{
  color: #000;
  /* height: 28px; */
  text-align:left;
   margin: 0rpx 10rpx; 
   margin-bottom: 10rpx; 
}
.product-price-wrap .product-price-new{
  color: #e80080;
  margin-left:10rpx;
  font-weight:900;
}
.product-price-wrap .product-price-old{
  color: #888;
  text-decoration: line-through;
  padding-left: 4rpx;
}
