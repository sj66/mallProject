/* pages/kind/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
} 
/*搜索样式  */
.search{
  width: 100%;
  padding: 20rpx;
  display: flex;
  align-items: center;
  background-color: #ffffff;
  margin: 0 auto;
  border-bottom: 2rpx solid #eeeeee;
}
.search-header{
  width: 80%;
  height: 70rpx;
  display: flex;
  justify-self: start;
  align-items: center;
  border-radius: 10rpx;
  border: 2rpx solid #eeeeee;
}
.search-header image{
  width: 50rpx;
  height: 50rpx;
  padding: 0 20rpx;
}
.search-input{
  width: 80%;
  height: 70rpx;
  font-size: 24rpx;
}
/* 时间排序 */
.search_one{
  padding: 0 20rpx;
  height: 70rpx;
  font-size: 28rpx;
  color: #545458;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.lift{
  width: 30rpx;
  height: 30rpx;
}
.lift image{
  width: 100%;
  height: 100%;
}
/* 商品列表 */
.goodslist{
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  background-color: #fff;
}
.goodslist-li{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom:20rpx;
}
/* 秒杀 */
.tui-countdown-content1{
  width: 100%;
  display: flex;
  font-size: 28rpx;
  color: #999999;
  padding: 20rpx 0;
  margin-left: 40rpx;
}
.tui-countdown-content1 .van-count-down{
  font-size: 28rpx !important;
  color: #ff0000 !important;
}
.goodslist-li-top{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-left: 40rpx;
}
.goodslist-li-pic{
  width: 260rpx;
  height: 260rpx;
  margin-right: 20rpx;
}
.goodslist-li-pic image{
  width: 100%;
  height: 100%;
}
.goodslist-li-content{
  font-size: 28rpx;
  line-height: 37rpx;
}
.price-new{
  font-size: 36rpx;
  font-weight: bold;
  color: #ff0000;
}
.price-old{
  font-size: 24rpx;
  color: #999999;
  text-decoration:line-through;
  margin-left: 20rpx;
} 
.goodslist-li-pack,
.goodslist-li-time{
  font-size: 24rpx;
  color: #999999;
}
.goodslist-li-bottom{
  width: 100%;
  height: 60rpx;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  margin-left: 40rpx;
}
.purchase{
  width: 260rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 24rpx;
  color: #ffffff;
  background-color: #bfbfbf;
  margin-top: 20rpx;
}
.progress {
  overflow: hidden;  
  width:300rpx;
  height: 30rpx;  
  line-height: 30rpx;
  font-size: 24rpx;
  color: #ffffff;
  text-align: center;
  margin-bottom: 30rpx;  
  margin-top: 20rpx;   
  background-color: #e6e6e6;  
  background-repeat: repeat-x;  
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#fff5f5f5', endColorstr='#fff9f9f9', GradientType=0);  
  -webkit-box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);  
  -moz-box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);  
  box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);  
  -webkit-border-radius: 4rpx;  
  -moz-border-radius: 4rpx;  
  border-radius: 15rpx;   
}
.progress .bar {  
  width: 0%;  
  height: 100%;  
  float: left;  
  align-items: center;  
  display: flex;  
  justify-content: center;  
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);  
  background-color: #ff0000;  
  background-repeat: repeat-x;  
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ff149bdf', endColorstr='#ff0480be', GradientType=0);  
  -webkit-box-shadow: inset 0 -1px 0 rgba(0, 0, 0, 0.15);  
  -moz-box-shadow: inset 0 -1px 0 rgba(0, 0, 0, 0.15);  
  box-shadow: inset 0 -1px 0 rgba(0, 0, 0, 0.15);  
  -webkit-box-sizing: border-box;  
  -moz-box-sizing: border-box;  
  box-sizing: border-box;  
  -webkit-transition: width 0.6s ease;  
  -moz-transition: width 0.6s ease;  
  -o-transition: width 0.6s ease;  
  transition: width 0.6s ease;  
}  
.goodslist-li-btn{
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #ffffff;
  border-radius: 6rpx;
  background-color: #ff0000;  
  margin-right: 40rpx;
}
.btn_go_car{
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  border-radius: 50%;
  position: fixed;
  right: 30rpx;
  bottom: 40rpx;
  background-color: #1fb922;
}
/* 弹窗 */
.tui-popup-box {
  position: relative;
  padding: 60rpx 0 120rpx 0;
  background-color: #FFFFFF;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}

