/* pages/shop_car/index.wxss */
page{
  width: 100%;
  background-color: #f9f9f9;
}
.hidden{
  display: none !important;
}
.empty_box{
  padding-top: 110rpx;
  text-align: center;
  color: #707070;
}
.empty_txt1{
  font-size: 48rpx;
}
.empty_txt2{
  font-size: 36rpx;
  margin-top: 32rpx;
}
.empty_btn{
  color: #1fb922;
  border: 2rpx solid #1fb922;
  border-radius: 10rpx;
  width: 292rpx;
  height: 75rpx;
  line-height: 75rpx;
  margin: 105rpx auto 0;
}
.goods_list{
  background-color: #ffffff;
  margin-bottom: 130rpx;
}
.goods_list-li{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.del_btn{
  background-color: #eb132d;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #ffffff;
  width: 65px;
  height: 100%;
}
.goods_box{
  display: flex;
  padding: 30rpx 0;
  align-items: center;
  border-top: 1rpx solid #e5e5e5;
}
.select_box{
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  margin: 0 28rpx;
}
.select_box.active{
  width: 44rpx;
  height: 44rpx;
  border: 1rpx solid #c8c8c8;
}
.select_box image{
  width: 100%;
  height: 100%;
  display: block;
}
.goods_img_box{
  width: 180rpx;
  height: 180rpx;
}
.goods_img_box image{
  width: 100%;
  height: 100%;
}
.goods_detail_box{
  padding: 20rpx;
  width: 440rpx;
  /* height: 180rpx; */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods_name{
  font-size: 24rpx;
}
.goods_weight{
  font-size: 24rpx;
}
.goods_company{
  font-size: 24rpx;
  color: #999999;
  padding-bottom: 10rpx;
}
.goods_total{
  font-size: 24rpx;
  margin-top: 30rpx;
}
.goods_activity{
  width: 90%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #999999;
  text-indent: 60rpx;
  background-color: #fbfbfb;
  margin: 0 auto;
  margin-bottom: 20rpx;
}
.goods_order_box{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.goods_price{
  font-size: 28rpx;
  font-weight: bold;
  color: #ff0000;
}
.goods_num_box{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.goods_num_box image{
  width: 46rpx;
  height: 46rpx;
}
.goods_num{
  font-size: 28rpx;
  color: #4b4b4b;
  margin: 0 10rpx;
}
.order_bot_box{
  position: fixed;
  width: 100%;
  height: 120rpx;
  left: 0;
  bottom: 0;
  display: flex;
  border-top: 2rpx solid #e5e5e5;
  background-color: #ffffff;
  z-index: 999;
}
.all_box{
  padding-left: 10rpx;
  width: 160rpx;
  height: 100%;
  display: flex;
  align-items:center;
  font-size: 32rpx;
}
.all_icon_box{
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  margin: 0 10rpx;
}
.all_icon_box.active{
  width: 44rpx;
  height: 44rpx;
  border: 1rpx solid #c8c8c8;
}
.all_icon_box image{
  width: 100%;
  height: 100%;
  display: block;
}
.order_total_box{
  width: 350rpx;
  height: 100%;
  padding-right: 20rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction:column;
  justify-content:center;
  text-align: right;
}
.order_total_cont{
  display: inline;
  font-weight: bold;
}
.order_total_txt{
  display: inline;
  color: #ff474b;
}
.order_total_tip{
  color: #6d6d6d;
  font-size: 24rpx;
}
.order_btn{
  width: 210rpx;
  height: 100%;
  background-color: #e5e5e5;
  color: #999999;
  display: flex;
  justify-content:center;
  align-items:center;
  font-size: 32rpx;
}
.order_btn.active{
  background-color: #ff0000;
  color: #ffffff;
}
input{
  overflow: auto;
}