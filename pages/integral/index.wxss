/* 兑换积分  样式*/
.container {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #eeeeee;
}

/*搜索样式  */
.search {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background-color: #ffffff;
  z-index: 100;
}

.search-header {
  width: 90%;
  height: 70rpx;
  background-color: #eeeeee;
  display: flex;
  justify-self: start;
  align-items: center;
  border-radius: 35rpx;
  margin: 0 auto;
}

.search-header image {
  width: 50rpx;
  height: 50rpx;
  padding: 0 20rpx;
}

.search-input {
  width: 80%;
  height: 70rpx;
  font-size: 24rpx;
}

/* 导航栏 */
.swiper-tab {
  position: fixed;
  top: 80rpx;
  left: 0rpx;
  width: 20%;
  height: 1100rpx;
  overflow-y:auto; 
  display: flex;
  flex-direction: column;
  align-items: center;
  line-height: 80rpx;
  padding-bottom: 88rpx;
  box-sizing: border-box;
  z-index: 999;
}

.tab-item {
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
}

.tab-li {
  width: 130rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 26rpx;
  color: #777;
  background-color: #ffffff;
  border-radius: 25rpx;
  margin: 15rpx auto;
}

.on {
  color: #ffffff;
  background-color: #ff0000;
}

.swiper {
  position: absolute;
  top: 80rpx;
  right: 0;
  width: 80%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f2f2f2;
  z-index: 99;
}

/* 轮播图 */
.classify {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 促销活动 */
.navListBox {
  width: 95%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  background-color: #ffffff;
  margin: 20rpx auto;
  border-radius: 14rpx;
}

.navListTitle {
  margin: 20rpx;
  font-size: 26rpx;
  font-weight: bold;
}

.activitylist {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.activitylist-li {
  width: 33.33%;
  margin-bottom: 30rpx;
  cursor: pointer;
}

.activity-bg {
  margin-bottom: 10rpx;
}

.activity-pic {
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto;
}

.activity-pic image {
  width: 100%;
  height: 100%;
}

.activity-msg {
  display: flex;
  flex-direction: column;
  text-align: left;
  font-size: 24rpx;
  color: #777;
  padding: 10rpx;
}