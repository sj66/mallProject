/* 弹窗 */
.tui-popup-box {
  position: relative;
  padding: 60rpx 0 120rpx 0;
  background-color: #FFFFFF;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}

.tui-product-box {
  font-size: 32rpx;
  letter-spacing: 6rpx;
  font-weight: bold;
  padding-bottom: 30rpx;
  text-align: center;
}
.tui-padding {
  padding: 80rpx 0;
}
.tui-popup-btn{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.tui-btn{
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  color: #FFFFFF;
  text-align: center;
}
.btn-true{
  background-color: #ff976a;
}
.btn-no{
  background-color: #ee0a24;
}