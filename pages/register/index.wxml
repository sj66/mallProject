<!--pages/register/index.wxml-->
<van-cell-group>
  <van-field
    model:value="{{ account }}"
    clearable
    label="手机号"
    placeholder="请输入手机号"
    title-width="5.2em"
    maxlength='11'
    auto-focus
  />

<van-field
    model:value="{{ sms }}"
    center
    clearable
    label="验证码"
    placeholder="请输入验证码"
    title-width="5.2em"
    maxlength='6'
    use-button-slot
  >
    <van-button slot="button" size="small" type="primary" bindtap="sendSms">{{code_txt}}</van-button>
  </van-field>
  <van-field
    model:value="{{ psw }}"
    type="password"
    label="密  码"
    placeholder="请输入密码"
    password
    title-width="5.2em"
  />
</van-cell-group>

<van-button custom-class="btn_login" type="primary" block bindtap="subHandle">注册</van-button>
<van-button custom-class="btn_back" type="default" block bindtap="goLogin">返回</van-button>
<van-popup show="{{ show }}" position="bottom" bind:close="closePopup" closeable round>
  <view class="tui-popup-box">
    <view class="tui-product-box tui-padding">是否在我司开户过？</view>
    <view class="tui-popup-btn">
      <view class="tui-btn btn-true" bindtap="onTrue">是</view>
      <view class="tui-btn btn-no" bindtap="onNo">否</view>
    </view>
  </view>
</van-popup>