/* pages/group_detail/index.wxss */
page{
  background-color: #f1f0ee;
}
.group-detail{
  padding: 20rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}
.start-time{
  line-height: 70rpx;
}
.goods-detail{
  padding: 20rpx;
  background-color: #e6e6e6;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 6rpx;
}
.goods-detail-left{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.goods-detail-pic{
  width: 150rpx;
  height: 150rpx;
  background-color: #fff;
}
.goods-detail-pic image{
  width: 100%;
  height: 100%;
}
.goods-detail-name{
  margin-left: 20rpx;
}
.goods-detail-right{
  text-align:right;
}
.goods-detail-coupon,
.goods-detail-number{
  font-size: 24rpx;
  color: #999999;
}
.group-total{
  border-top: 2rpx solid #ededed;
  border-bottom: 2rpx solid #ededed;
  font-weight: bold;
  line-height: 70rpx;
  text-align:right;
}