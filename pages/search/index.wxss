}
.loading_box{
  background-color: #ffffff;
  text-align: center;
}
.btn_go_car{
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  border-radius: 50%;
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
  background-color: #1fb922;
}
