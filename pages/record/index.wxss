/* pages/record/index.wxss */
.team-ranking{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #999999;
  padding-left: 30rpx;
  border-bottom: 2rpx solid #eeeeee;
}
/* 表格 */
.table {
  width: 100%;
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}
.td {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #e4f7f1;
}
.th {
  width: 100%;
  height:60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #fff;
  background: -webkit-gradient(linear, 0% 25%, 75% 100%, from(#73d2b2), to(#6cd8b3));
}