<!--pages/login/index.wxml-->
<van-cell-group>
  <van-field
    model:value="{{ account }}"
    clearable
    label="手机号"
    placeholder="请输入手机号"
    title-width="5.2em"
    maxlength='11'
    auto-focus
  />

  <van-field
    model:value="{{ psw }}"
    type="password"
    label="密  码"
    placeholder="请输入密码"
    password
    title-width="5.2em"
  />
</van-cell-group>

<van-button custom-class="btn_login" type="primary" block bindtap="bindLogin">登录</van-button>

<view class="action-row">
  <navigator url="/pages/register/index">注册账号</navigator>
  <text>|</text>
  <navigator url="/pages/forget_psw/index">忘记密码</navigator>
</view>