/**index.wxss**/
.container {
  width: 100%;
  height: 100%;
  background-color: #eeeeee;
} 
.refundlist-li{
  width: 90%;
  font-size: 24rpx;
  border-radius: 20rpx;
  background-color: #ffffff;
  margin: 0 auto;
  margin-top: 30rpx;
}
.refundlist-li-header{
  padding: 30rpx 30rpx 10rpx;
  display: flex;
  justify-content: space-between;
}
.refundlist-li-number{
  font-size: 28rpx;
  font-weight: bold;
}
.refundlist-li-type{
  font-size: 24rpx;
}
.refundlist-li-top{
  padding: 10rpx 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}
.refundlist-li-pic{
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
  float: left;
}
.refundlist-li-pic image{
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}
.refundlist-li-title{
  width:97%;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1;
  margin-bottom: 14rpx;
}
.refundlist-li-tip{
  width: 85%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fafafa;
  padding-left: 60rpx;
  margin: 0 auto;
}
.refundlist-li-btn{
  padding: 30rpx 30rpx;
  display: flex;
  justify-content: flex-end;
}
.refundlist-li-delete{
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  border: 2rpx solid #999999;
  border-radius: 30rpx;
  margin-right: 30rpx;
}
.refundlist-li-detail{
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  color: #e8461c;
  border: 2rpx solid #e8461c;
  border-radius: 30rpx;
}