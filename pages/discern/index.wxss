page{
  background-color: #eeeeee;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.line{
  position: absolute;
  top: 0;
  left: 85rpx;
  z-index: 2;
  width: 580rpx;
  height: 20rpx; 
  background-image: radial-gradient(#7fc2e4, #4371ba, rgba(57,105,172,0.1));
  /*动画效果*/
  animation: myScan 2s infinite alternate;
  -webkit-animation: myScan 2s infinite alternate;
}
@keyframes  myScan{
  from { top:100rpx; }
  to { top: 680rpx; }
}