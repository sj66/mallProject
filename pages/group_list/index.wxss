/* pages/group_list/index.wxss */
.container{
  margin: 0 20rpx;
}
.title{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #e6e6e6;
}
.group-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
 
.group-list-li {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 2rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #e6e6e6;
}
.group-list-li-left{
  width: 500rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.group-list-li-date{
  margin-right: 40rpx;
}