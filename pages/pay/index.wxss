/* pages/pay/index.wxss */
page{
  background-color: #f7f7f7;
}
.title{
  font-size: 32rpx;
  text-align: center;
  padding: 20rpx 0 10rpx;
}
.price_box{
  text-align: center;
  font-weight: bold;
  letter-spacing: 4rpx;
}
.price_tip{
  font-size: 42rpx;
  position: relative;
  top: -10rpx;
  padding-right: 10rpx;
}
.price{
  font-size: 52rpx;
}
.cell{
  margin-top: 20rpx;
  border-top: 2rpx solid #e1e1e1;
  border-bottom: 2rpx solid #e1e1e1;
}
.cell_title{
  color: #808080 !important;
  font-size: 32rpx;
  font-weight: 400;
}
.cell_value{
  color: #000000 !important;
  font-size: 32rpx;
  font-weight: 400;
}
.btn_css{
  margin-top: 40rpx;
  width: 720rpx !important;
  font-weight: 400;
  padding: 10rpx 0 !important;
  border-radius: 10rpx !important;
}
/* 弹窗 */
.tui-popup-box {
  position: relative;
  padding: 60rpx 0;
  background-color: #FFFFFF;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}
.tui-tip{
  width: 100%;
  font-size: 40rpx;
  font-weight: bold;
  padding-bottom: 20rpx;
  text-align: center;
  color: #ff0000;
  border-bottom: 2rpx solid #eeeeee;
}
.tui-recommend{
  width: 92%;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  margin-top: 20rpx;
}
.tui-popup-sub{
  font-size: 32rpx;
  font-weight: bold;
  padding-top: 30rpx;
  margin-bottom: 20rpx;
  text-align: center;
}
.tui-goods {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 26rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #eeeeee;
}
.tui-padding {
  font-size: 26rpx;
  padding: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.tui-popup-img {
  height: 260rpx;
  width: 260rpx;
  display: block;
  background-color: #fff;
}

.tui-popup-price {
  padding-left: 20rpx;
  padding-bottom: 8rpx;
}
.tui-amount {
  color: #ff201f;
  font-size: 36rpx;
}
.tui-button{
  display: flex;
}
.tui-btn{
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #ffffff;
  text-align: center;
  border-radius: 6rpx;
  background-color:#ff201f;
}