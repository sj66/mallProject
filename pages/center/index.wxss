/* pages/center/index.wxss */
page{
  background-color: #f5f5f5;
}
#avatar_box{
  padding: 106rpx 30rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
}
#avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  background-color: #1fb922;
  color: #ffffff;
  font-size: 28rpx;
  line-height: 100rpx;
  text-align: center;
}
.tui-avatar {
  flex-shrink: 0;
  width: 128rpx;
  height: 128rpx;
  display: block;
}
.tui-info {
  width: 80%;
  padding-left: 30rpx;
}
.tui-nickname {
  font-size: 30rpx;
  font-weight: 500;
  color: #010101;
  display: flex;
  align-items: center;
}
.tui-explain {
  width: 80%;
  font-size: 24rpx;
  font-weight: 400;
  color: #818181;
  padding-top: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.tui-btn-edit {
  flex-shrink: 0;
  padding-right: 22rpx;
}
.btn_edit{
  width: 13rpx;
  height: 22rpx;
}

.info_box{
  width: 100%;
  margin: 20rpx auto;
}
.order_item{
  color: #1fb922;
}
.order_item:last-of-type{
  border-right: 0;
}