/* 商品内容 */
.goods_content{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.goods_info{
  width: 650rpx;
  display: flex;
  flex-direction: column;
}
.tui-pro-pricebox {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #ff201f;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 44rpx;
}

.tui-pro-price {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}

.tui-price {
  font-size: 58rpx;
}

.tui-original-price {
  font-size: 26rpx;
  line-height: 26rpx;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}

.tui-pro-titbox {
  font-size: 32rpx;
  font-weight: 500;
  position: relative;
  padding: 0 30rpx 0;
  box-sizing: border-box;
}
.tui-gray{
  font-size: 26rpx;
  padding-left: 30rpx;
}
/* 分享按钮 */
.page_share{
  width: 60rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.share-image{
  width: 60rpx;
  height: 60rpx;
}
.share-image image{
  width: 100%;
  height: 100%;
}
.share_text{
  font-size: 28rpx;
  font-weight: bold;
  color: #999999;
}
