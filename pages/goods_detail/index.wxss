/* 商品信息 */
.goods_detail_box{
  background-color: #ffffff;
  padding: 20rpx;
}
.goods_detail_table{
  font-size: 16px;
  display: flex;
  flex-wrap: wrap;
  border:1rpx solid #e0e0e0;
}
.goods_detail_td{
  width: 70%;
  box-sizing:border-box;
  padding: 16rpx;
  border-bottom:1rpx solid #e0e0e0;
}
.goods_detail_td:nth-last-child(2n+0){
  width: 30%;
  border-right:1rpx solid #e0e0e0;
}
.goods_detail_td:last-of-type,.goods_detail_td:nth-last-child(2){
  border-bottom:none;
}

/* 说明书 */

.tui-product-img {
  display: flex;
  flex-direction: column;
  transform: translateZ(0);
}

.tui-product-img image {
  width: 100%;
  display: block;
}
/* 到底了 */

.bot_placeholder{
  display: block;
  width: 100%;
  height: 0;
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
}
/* 导航栏  已注释 */
.tab_title{
  flex: 1;
  font-size: 36rpx;
  text-align: center;
  padding: 30rpx 0;
}
.tab_title text{
  padding: 10rpx 0;
}
.tab_title.active{
  color: #09BB07;
}
.tab_title.active text{
  border-bottom: 2rpx solid #09BB07;
}

/* 无货提示 */
.qty_tip{
  position: fixed;
  left: 0;
  bottom: 100rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  color: #ffffff;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 99;
}
/* 分享弹窗 */
.popup-box{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #eeeeee;
  z-index: 100;
}
.wechat,
.poster,
.terminal{
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 35rpx 0;
}
.wechat button{
  width: 128px !important;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #eeeeee;
}
.wechat-image,
.poster-image,
.terminal-image{
  width: 80rpx;
  height: 80rpx;
}
.wechat-image image,
.poster-image image,
.terminal-image image{
  width: 100%;
  height: 100%;
}
.wechat-text,
.poster-text,
.terminal-text{
  font-size: 26rpx;
  margin-top: 20rpx;
}
.poster-text,
.terminal-text{
  font-weight: bold;
  color: #000000;
}
.close-btn{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

/* 分享朋友圈 */
.tankuang{
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 999999;
  position: fixed;
  right: 0;
  bottom: 0;
}
.tankuang .container{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1200rpx;
  border-radius: 20rpx 20rpx 0px 0px;
  background-color: #ffffff;
}
.popupClose{
  font-size: 26rpx;
  text-align: right;
  margin: 20rpx;
}
.canvasImg{
  width: 550rpx;
  height: 930rpx;
  background-color: #ffffff;
  box-shadow: 2px 2px 5px #cccccc;
  margin: 0 auto;
}
.popupTip{
  font-size: 26rpx;
  text-align: center;
  margin: 25rpx 0;
}
.saveBtn{
  width: 100%;
  display: flex;
  justify-content: center;
}
/* 加入购物车、下单弹窗 */
