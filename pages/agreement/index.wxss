/**index.wxss**/
.container {
  margin-left: 10rpx;
  margin-right: 10rpx;
  background-color: #fff;
} 
.swiper-tab {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  line-height: 80rpx;
  border-bottom: 2rpx solid #999999;
  background-color: #fff;
  z-index: 99;
}
.tab-item { 
  font-size: 30rpx;
  color: #777;
}
.swiper {
  /* display: block; */
  margin-top: 80rpx;
  /* width: 100%; */
  /* height: 100%; */
  height: 100vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.swiper-item{
  height: 100%;
}
.on {
  font-weight: bold;
  color: #09bb07;
  border-bottom: 5rpx solid #09bb07; 
}  
/* 合同信息 */
.contractlist{
  padding: 0 30rpx;
  /* width: 100%; */
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.contractinfo{
  width: 100%;
  display: flex;
  justify-content: start;
  align-items: center;
}
.usermotto{
  display: flex;
  flex-direction: column;
  text-align: left;
  width: 420rpx;
}
.userinfo-avatar {
  width: 180rpx;
  height: 150rpx;
  margin: 40rpx;
  margin-left: 0rpx;
}
.username{
  font-size: 28rpx;
  font-weight: bold;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.usernumber{
  width: 450rpx;
  font-size: 24rpx;
  color: #999999;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.usernumber image{
  width: 8px;
  height: 24rpx;
}
.userschedule{
  font-size: 24rpx;
  color: #999999;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.progress {
  overflow: hidden;  
  height: 20rpx;  
  margin-bottom: 20rpx;  
  margin-top: 20rpx;  
  margin-left: 20rpx;  
  background-color: #f7f7f7;  
  background-image: -moz-linear-gradient(top, #f5f5f5, #f9f9f9);  
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#f5f5f5), to(#f9f9f9));  
  background-image: -webkit-linear-gradient(top, #f5f5f5, #f9f9f9);  
  background-image: -o-linear-gradient(top, #f5f5f5, #f9f9f9);  
  background-image: linear-gradient(to bottom, #f5f5f5, #f9f9f9);  
  background-repeat: repeat-x;  
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#fff5f5f5', endColorstr='#fff9f9f9', GradientType=0);  
  -webkit-box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);  
  -moz-box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);  
  box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);  
  -webkit-border-radius: 4rpx;  
  -moz-border-radius: 4rpx;  
  border-radius: 10rpx;  
  width:200rpx;  
  margin-right:24rpx;  
}
.progress .bar {  
  width: 0%;  
  height: 100%;  
  color: #ffffff;  
  float: left;  
  align-items: center;  
  display: flex;  
  justify-content: center;  
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);  
  background-color: #e15f2f;  
  background-image: -moz-linear-gradient(top, #e15f2f, #e59942);  
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#e15f2f), to(#e59942));  
  background-image: -webkit-linear-gradient(top, #e15f2f, #e59942);  
  background-image: -o-linear-gradient(top, #e15f2f, #e59942);  
  background-image: linear-gradient(to bottom, #e15f2f, #e59942); 
  background-repeat: repeat-x;  
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ff149bdf', endColorstr='#ff0480be', GradientType=0);  
  -webkit-box-shadow: inset 0 -1px 0 rgba(0, 0, 0, 0.15);  
  -moz-box-shadow: inset 0 -1px 0 rgba(0, 0, 0, 0.15);  
  box-shadow: inset 0 -1px 0 rgba(0, 0, 0, 0.15);  
  -webkit-box-sizing: border-box;  
  -moz-box-sizing: border-box;  
  box-sizing: border-box;  
  -webkit-transition: width 0.6s ease;  
  -moz-transition: width 0.6s ease;  
  -o-transition: width 0.6s ease;  
  transition: width 0.6s ease;  
} 
.not-agreement{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 200rpx;
}