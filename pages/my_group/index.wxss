/* pages/my_group/index.wxss */
.container{
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.swiper-tab {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  line-height: 80rpx;
  border-bottom: 2rpx solid #999999;
  background-color: #fff;
  z-index: 99;
}
.tab-item { 
  text-align: center;
  font-size: 30rpx;
}
.swiper {
  width: 100%;
  height: 100vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.click {
  font-weight: bold;
  color: #09bb07;
  border-bottom:6rpx solid#09bb07; 
} 
/* 商品列表 */
.goodslist{
  margin-top: 80rpx;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  background-color: #fff;
}
.goodslist-li{
  position: relative;
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #eeeeee;
}
.goodslist-li-pic{
  width: 260rpx;
  height: 260rpx;
}
.goodslist-li-pic image{
  width: 100%;
  height: 100%;
}
.goodslist-li-content{
  font-size: 26rpx;
  line-height: 37rpx;
  margin-left: 20rpx;
}
.goodslist-li-sign{
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  width: 180rpx;
  height: 180rpx;
}
.goodslist-li-sign image{
  width: 100%;
  height: 100%;
}
.goodslist-li-startDate,
.goodslist-li-endDate{
  font-size: 24rpx;
  color: #999999;
}
.price-new{
  font-size: 36rpx;
  font-weight: bold;
  color: #ff0000;
}
.price-old{
  font-size: 24rpx;
  color: #999999;
  text-decoration:line-through;
  margin-left: 20rpx;
} 
