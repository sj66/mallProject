/**index.wxss**/
.container {
  width: 100%;
  height: 100%;
  background-color: #ffffff;
} 
.directions{
  width: 100%;
  font-size: 28rpx;
  margin-bottom: 10rpx;
  margin-left: 20rpx;
  text-align: left;
}
.note{
  width: 100%;
  font-size: 24rpx;
  color: #ff0000;
  margin-left: 20rpx;
  text-align: left;
}
.list{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  padding-left: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 2rpx solid #eeeeee;
}
.list-input{
  width: 100%;
}
/* 多张图片上传 */
.flex{  
  display: flex;  
}  
.up-pic{  
  /* padding:20rpx 24rpx; */  
  width: 100%;  
  justify-content: center;  
}  
.pic-box{  
  margin-top:20rpx;  
  flex-flow:wrap;  
   width:95%;   
}  
.ap-box{  
   position: relative;  
}  
.add-pic{  
  width: 160rpx;  
  height: 160rpx;  
  margin-right: 20rpx;  
  position: relative;  
  margin: 20rpx 30rpx 20rpx 30rpx;  
} 
.add-pic image{
  width: 100%;
  height: 100%;
}
/* 删除图片 */  
.img-de{  
  width:45rpx;  
  height:45rpx;  
  border-radius:50%;  
  position:absolute;  
  right:-41rpx;  
  top:5rpx;  
}  
.img-de image{
  width: 100%;
  height: 100%;
}
.hong-contant .teamwork-btn{  
  width: 360rpx;  
  height: 88rpx;  
  border-radius: 50rpx;  
  color: white;  
  background-color:#14a1fd;  
  margin: 0 auto;  
  margin-top: 80rpx;  
  margin-bottom: 40rpx;  
}
.feedback{
  width: 100%;
  text-align: center;
  margin-top: 20rpx;
}

