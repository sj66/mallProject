/* pages/order_pay/index.wxss */
.container{
  background-color: #f2f2f2;
}
/*切换栏*/
.swiper-tab {
  height: 80rpx;
  line-height: 80rpx;
  background: #ffffff;
  columns: #999999;
  display: flex;
  position: relative;
  z-index: 2;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-bottom: 2rpx solid #e6e6e6;
}

.swiper-tab-list {
  padding: 0 8rpx;
  font-size: 30rpx;
}

.on {
  border-bottom: 8rpx solid #ff9908;
  color: #ff9908;
}

.navTopList {
  display: flex;
  width: 100%;
  height: 70rpx;
  background: #fff;
  border-bottom: 1rpx solid #e6e6e6;
  margin-top: 10rpx;
}

.navTopList .order-info {
  text-align: center;
}

.navTopList .order-info view {
  width: 56rpx;
  height: 56rpx;
  margin-left: 31rpx;
}

.navTopList .order-info text {
  font-size: 34rpx;
}

.navTopList .order-info text.active {
  color: #ff6662;
}

.navTopList .ywc,
.navTopList .dfk,
.navTopList .yqx {
  flex: 1;
}
.hot-box{
  width: 100%;
  height: 1100rpx;
}
/*订单列表*/
.orderDetails {
  background-color: #ffffff;
  margin-top: 20rpx;
  font-size: 30rpx;
}
.orderDetails:nth-of-type(1){
  margin-top: 0;
}
.order_detail {
  background-color: #ffffff;
  padding-bottom: 20rpx;
}
/* 待付款 待发货  待收货  已完成*/
.orderListDetail {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.orderListTitle {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #bebebe;
}

.orderListTitle .userName {
  padding-right: 50rpx;
  margin-left: 20rpx;
}

.userName:active{
  color: #ff9908;
}

.orderListTitle .orderStatus {
  float: right;
  margin-right: 20rpx;
  color: #ff0000;
}

.orderStatus:active{
  color: #ff9908;
}

.productInfo {
  flex: 4;
  margin: 40rpx 10px 20px 20rpx;
  font-size: 30rpx;
}

.productInfo .productTitle { 
  font-size: 30rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}
.onLook{
  color: #777777;
}
.productAll {
  height: 80rpx;
  line-height: 80rpx;
  margin-right: 20rpx;
}
/* 表格 */
.table {
  margin: 0 10rpx;
  border-top: 2rpx solid #333333;
  border-left: 2rpx solid #333333;
  box-sizing: border-box;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}

.td {
  height: 80rpx;
  font-size: 24rpx;
  justify-content: center;
  text-align: center;
  border-bottom: 2rpx solid #333333;
  border-right: 2rpx solid #333333;
  box-sizing: border-box;
}
.td-1 {
  width: 41%;
  line-height: 40rpx;
}
.td-info{
  width: 100%;
  text-indent: 4rpx;
  text-align: left;
  overflow: hidden;
  /*超出部分隐藏*/
  text-overflow: ellipsis;
  /* 超出部分显示省略号 */
  white-space: nowrap;
  /*规定段落中的文本不进行换行 */
}
.td-line{
  border-bottom:2rpx solid #bebebe;
}
.td-2 {
  width: 20%;
  line-height: 80rpx;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-left: 4rpx;
}

.td-3{
  width: 15%;
  line-height: 80rpx;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-right: 4rpx;
}
.td-4,
.td-5 {
  width: 12%;
  line-height: 80rpx;
}
.bg-w,
.bg-g {
  background-color: #fff;
}

.th {
  justify-content: center;
  display: flex;
  height: 60rpx;
  font-size: 24rpx;
  align-items: center;
  border-bottom: 2rpx solid #333333;
  border-right: 2rpx solid #333333;
  box-sizing: border-box;
}

.th-1 {
  width: 41%;
}

.th-2 {
  width: 20%;
}

.th-3{
  width: 15%;
}
.th-4,
.th-5 {
  width: 12%;
}